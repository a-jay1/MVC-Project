@{
    ViewBag.Title = "Todo List";
}

@using WebApplication6.Models
@{
    DateTime today = DateTime.Now;
    string todayDateString = today.ToString("yyyy-MM-dd");
}


<div style="
    width:100%;
    height:75vh;
    display:flex;
    flex-direction:column;
    justify-content:center;
    align-items:center">


    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="error">@ViewBag.ErrorMessage</div>
    }

    <h2>Todo List</h2>

    @model Datestring


    @using (Html.BeginForm("StoreDate", "Todopage", FormMethod.Post))
    {
        <div>
            @Html.TextBoxFor(model => model.DateString, new { type = "date", min = todayDateString })

        </div>
        <div>
            <input type="submit" value="InsertTask" />
        </div>
    }
    <br /><br /><br /><br />
    @using (Html.BeginForm("StoreView", "Todopage", FormMethod.Post))
    {
        <div>
            @Html.TextBoxFor(model => model.DateString, new { type = "date" })
        </div>
        <div>
            <input type="submit" value="ViewTask" />
        </div>
    }

</div>